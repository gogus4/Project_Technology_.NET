<Window x:Class="Carmotub.Views.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un client" Height="Auto" SizeToContent="Height" Width="520" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Ajouter un client" FontSize="24" FontFamily="Segoe UI Light" HorizontalAlignment="Left" Margin="5,0,0,0"/>
        
        <Grid x:Name="AddCustomerGridRow">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.22*"/>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="0.22*"/>
                <ColumnDefinition Width="0.3*"/>
            </Grid.ColumnDefinitions>
        </Grid>

        <Button x:Name="AddCustomer" Content="Ajouter le client" FontFamily="Segoe UI Light" HorizontalAlignment="Left" FontSize="12" Width="120" Margin="5,5,0,5" Click="AddCustomer_Click"/>
    </StackPanel>
</Window>
