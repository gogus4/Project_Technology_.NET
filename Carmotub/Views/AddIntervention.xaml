<Window x:Class="Carmotub.Views.AddIntervention"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter une intervention" Height="Auto" SizeToContent="Height" Width="630" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">

        <TextBlock Text="Ajouter une intervention" Grid.ColumnSpan="3" Margin="5,0,0,0" FontSize="34" FontFamily="Segoe UI Light"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="5" Margin="0,5,0,0">
            <TextBlock FontFamily="Segoe UI" Margin="5,5,0,5">
                <Run Text="Client selectionné : "/>
                <Run x:Name="CustomerSelected" FontWeight="Bold"/>
            </TextBlock>
        </StackPanel>

        <Grid x:Name="AddInterventionGridRow">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.32*"/>
                <ColumnDefinition Width="0.45*"/>
                <ColumnDefinition Width="0.32*"/>
                <ColumnDefinition Width="0.4*"/>
            </Grid.ColumnDefinitions>
        </Grid>

        <Button x:Name="AddInterventionButton" Content="Ajouter l'intervention" Margin="5,5,0,5" FontFamily="Segoe UI Light" Grid.Row="11" Grid.ColumnSpan="2" FontSize="12" Width="130" HorizontalAlignment="Left" Click="AddInterventionButton_Click"  />

    </StackPanel>
</Window>
